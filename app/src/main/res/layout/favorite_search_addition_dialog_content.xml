<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/settings_item_left_margin"
    android:layout_marginRight="@dimen/settings_item_left_margin"
    android:background="@color/soft_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        />
    <Spinner
        android:id="@+id/favorite_search_addition_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:spinnerMode="dropdown"
        android:background="@color/spinner_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Word"
        android:textSize="16sp"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/favorite_search_addition_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/errorText"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/favorite_search_addition_query_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:inputType="text"
            />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>