<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/widget_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ripple_appwidget"
        >
        <ImageView
            android:id="@+id/widget_search_image"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_search_white"
            />
        <TextView
            android:id="@+id/widget_search_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="@string/title_search"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
        <LinearLayout
            android:id="@+id/widget_search_border"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            />
    </FrameLayout>
    <ImageView
        android:id="@+id/widget_favorite"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_vertical|right"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_star"
        android:background="@drawable/ripple_appwidget"
        />
    <ImageView
        android:id="@+id/widget_settings"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_settings"
        android:background="@drawable/ripple_appwidget"
        />
</FrameLayout>