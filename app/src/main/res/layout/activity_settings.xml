<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?android:actionBarSize"
        />
    <LinearLayout
        android:id="@+id/settings_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/soft_background"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/settings_color_text"
            android:drawableLeft="@drawable/ic_palette"
            />

        <com.flask.colorpicker.ColorPickerView
            android:id="@+id/color_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alphaSlider="true"
            app:density="12"
            app:lightnessSlider="true"
            app:wheelType="FLOWER"
            app:lightnessSliderView="@+id/lightness_slider"
            app:alphaSliderView="@+id/alpha_slider"
            />

        <com.flask.colorpicker.slider.LightnessSlider
            android:id="@+id/lightness_slider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

        <com.flask.colorpicker.slider.AlphaSlider
            android:id="@+id/alpha_slider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />
    </LinearLayout>

    <include layout="@layout/primary_dark_divider" />

    <TextView
        android:id="@+id/settings_licenses"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/title_licenses"
        android:drawableLeft="@drawable/ic_license"
        />

    <include layout="@layout/primary_dark_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/copyright"
        />
</LinearLayout>